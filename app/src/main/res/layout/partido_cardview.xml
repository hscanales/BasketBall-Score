                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.14"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.75" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:layout_width="105dp"
                android:layout_height="27dp"
                android:id="@+id/team2" android:layout_marginTop="8dp"
